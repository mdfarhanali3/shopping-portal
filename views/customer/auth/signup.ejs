<%- include('../../shared/includes/head', { pageTitle: 'Signup'}) %>
<link rel="stylesheet" href="/styles/form.css">
<link rel="stylesheet" href="/styles/auth.css">

</head>
<body>

<%- include('../../shared/includes/header') %>

<main>
    <h1>Create New Account</h1>
    <% if (inputData.errorMessage) { %>
        <section class="alert">
          <h2>Invalid Input</h2>
          <p><%= inputData.errorMessage %></p>
        </section>
      <% } %>
    <form action="/signup" method="POST">
    <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>">    
    <p>
        <label for="email">E-mail</label>
        <input type="email" id="email" name="email" value="<%= inputData.email %>"  required>
    </p>
    <p>
        <label for="confirm_email">Confirm Email</label>
        <input type="email" id="confirm_email" name="confirm_email" value="<%= inputData.confirmEmail %>"  required>
    </p>
    <p>
        <label for="password">Password</label>
        <input type="password" id="password" name="password" value="<%= inputData.password %>" minlength="6" required>
    </p>
    
    <hr>
    
    <p>
        <label for="name">Full Name</label>
        <input type="text" id="name" name="name" value="<%= inputData.fullname %>"  required>
    </p>
    <p>
        <label for="street">Street</label>
        <input type="text" id="street" name="street" value="<%= inputData.street %>" required>
    </p>
    <p>
        <label for="postalCode">Postal Code</label>
        <input type="text" id="postalCode" name="code" value="<%= inputData.postal %>"  minlength="5" required>
    </p>
    <p>
        <label for="city">City</label>
        <input type="text" id="city" name="city" value="<%= inputData.city %>" required>
    </p>

    <button class="btn">Create Account</button>
    <p id="switch-form">
    <a href="/login">Login instead</a>
    </p>
    </form>
</main>
<%- include('../../shared/includes/footer') %>